{
  "component": "ButtonGroup",
  "variants": ["segmented", "full-width"],
  "sizes": ["mini", "sm", "md", "lg"],
  "layout": {
    "type": "auto-layout",
    "direction": "horizontal",
    "alignment": {
      "self": "stretch",
      "children": "stretch"
    },
    "padding": {
      "top": 0,
      "right": 0,
      "bottom": 0,
      "left": 0
    },
    "gap": 0
  },
  "constraints": {
    "horizontal": "left",
    "vertical": "top",
    "width": {
      "mode": "hug-contents",
      "min": null,
      "max": null,
      "value": null
    },
    "height": {
      "mode": "hug-contents",
      "min": null,
      "max": null,
      "value": null
    }
  },
  "overflow": {
    "horizontal": "hidden",
    "vertical": "visible",
    "clipping": false
  },
  "children": [
    {
      "element": "button",
      "constraints": {
        "horizontal": "left",
        "vertical": "stretch"
      },
      "flex": {
        "grow": 0,
        "shrink": 0,
        "basis": "auto"
      },
      "width": {
        "mode": "hug-contents",
        "min": "fit-content"
      },
      "height": {
        "mode": "fill-container"
      },
      "border": {
        "right": "1px solid var(--border)",
        "radius": 0
      },
      "text": {
        "truncation": "none",
        "whiteSpace": "nowrap"
      }
    }
  ],
  "containerStyles": {
    "border": "1px solid var(--border)",
    "borderRadius": "4px",
    "overflow": "hidden"
  },
  "selectedState": {
    "background": "var(--purple-surface)",
    "color": "var(--purple-text)",
    "borderColor": "var(--purple-border)"
  }
}

