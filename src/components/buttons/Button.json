{
  "component": "Button",
  "variants": ["primary", "secondary", "tertiary"],
  "sizes": ["mini", "sm", "md", "lg"],
  "layout": {
    "type": "auto-layout",
    "direction": "horizontal",
    "alignment": {
      "self": "stretch",
      "children": "center"
    },
    "padding": {
      "top": 12,
      "right": 16,
      "bottom": 12,
      "left": 16
    },
    "gap": 8
  },
  "constraints": {
    "horizontal": "left",
    "vertical": "top",
    "width": {
      "mode": "hug-contents",
      "min": null,
      "max": null,
      "value": null
    },
    "height": {
      "mode": "fixed",
      "min": 40,
      "max": null,
      "value": null
    }
  },
  "overflow": {
    "horizontal": "visible",
    "vertical": "visible",
    "clipping": false
  },
  "text": {
    "truncation": "ellipsis",
    "whiteSpace": "nowrap",
    "maxLines": null,
    "overflowWrap": "normal"
  },
  "children": [
    {
      "element": "iconLeft",
      "optional": true,
      "constraints": {
        "horizontal": "left",
        "vertical": "center"
      },
      "flex": {
        "grow": 0,
        "shrink": 0,
        "basis": "auto"
      },
      "width": {
        "mode": "fixed",
        "value": 16
      },
      "height": {
        "mode": "fixed",
        "value": 16
      }
    },
    {
      "element": "text",
      "constraints": {
        "horizontal": "left",
        "vertical": "center"
      },
      "flex": {
        "grow": 1,
        "shrink": 1,
        "basis": 0
      },
      "text": {
        "truncation": "ellipsis",
        "whiteSpace": "nowrap",
        "minWidth": 0
      }
    },
    {
      "element": "iconRight",
      "optional": true,
      "constraints": {
        "horizontal": "right",
        "vertical": "center"
      },
      "flex": {
        "grow": 0,
        "shrink": 0,
        "basis": "auto"
      },
      "width": {
        "mode": "fixed",
        "value": 16
      },
      "height": {
        "mode": "fixed",
        "value": 16
      }
    }
  ],
  "sizeVariants": {
    "mini": {
      "padding": {
        "top": 6,
        "right": 10,
        "bottom": 6,
        "left": 10
      },
      "height": {
        "min": 32,
        "value": 32
      },
      "fontSize": 13
    },
    "sm": {
      "padding": {
        "top": 8,
        "right": 12,
        "bottom": 8,
        "left": 12
      },
      "height": {
        "min": 36,
        "value": 36
      },
      "fontSize": 14
    },
    "md": {
      "padding": {
        "top": 12,
        "right": 16,
        "bottom": 12,
        "left": 16
      },
      "height": {
        "min": 40,
        "value": 40
      },
      "fontSize": 14
    },
    "lg": {
      "padding": {
        "top": 16,
        "right": 24,
        "bottom": 16,
        "left": 24
      },
      "height": {
        "min": 48,
        "value": 48
      },
      "fontSize": 16
    }
  }
}

