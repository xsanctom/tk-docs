{
  "component": "Card",
  "description": "A card component for displaying content with icon, title, optional badge, and description. Supports multiple interaction states.",
  "variants": {
    "states": ["default", "hover", "focus", "disabled", "selected"]
  },
  "layout": {
    "type": "flex",
    "direction": "row",
    "alignment": "flex-start",
    "justify": "flex-start",
    "gap": "12px",
    "padding": "16px"
  },
  "constraints": {
    "horizontal": "fill",
    "vertical": "hug",
    "widthMode": "fill",
    "heightMode": "hug"
  },
  "visual": {
    "default": {
      "backgroundColor": "var(--surface-raised)",
      "border": "1px solid var(--border)",
      "borderRadius": "4px"
    },
    "hover": {
      "backgroundColor": "var(--surface-raised-hover)",
      "border": "1px solid var(--border)"
    },
    "focus": {
      "backgroundColor": "var(--surface)",
      "border": "2px solid var(--focus)",
      "borderRadius": "4px"
    },
    "selected": {
      "backgroundColor": "var(--purple-surface-selected)",
      "border": "1px solid var(--purple-purple-600)",
      "borderRadius": "4px"
    },
    "disabled": {
      "backgroundColor": "var(--surface-raised)",
      "border": "1px solid var(--border)",
      "borderRadius": "4px",
      "opacity": 0.6
    }
  },
  "icon": {
    "size": "20px",
    "flexShrink": 0,
    "color": {
      "default": "var(--text)",
      "disabled": "var(--text-disabled)"
    }
  },
  "content": {
    "flex": "1 1 0",
    "minWidth": 0,
    "display": "flex",
    "flexDirection": "column",
    "gap": "8px"
  },
  "title": {
    "fontFamily": "'IBM Plex Sans', sans-serif",
    "fontSize": "14px",
    "fontWeight": 500,
    "lineHeight": "1.5",
    "color": {
      "default": "var(--text)",
      "disabled": "var(--text-disabled)"
    }
  },
  "description": {
    "fontFamily": "'IBM Plex Sans', sans-serif",
    "fontSize": "12px",
    "fontWeight": 400,
    "lineHeight": "1.5",
    "color": {
      "default": "var(--text-subtle)",
      "disabled": "var(--text-disabled)"
    },
    "maxLines": 4
  },
  "badge": {
    "display": "inline-flex",
    "padding": "2px 8px",
    "borderRadius": "9999px",
    "fontSize": "10px",
    "fontWeight": 500,
    "backgroundColor": {
      "default": "var(--purple-purple-100)",
      "disabled": "var(--grey-grey-300)"
    },
    "color": {
      "default": "var(--purple-purple-700)",
      "disabled": "var(--grey-grey-700)"
    }
  }
}

