{
  "component": "Tabs",
  "description": "A tabs component for organizing content into multiple panels. Includes Tab and TabPanel sub-components.",
  "variants": {
    "variants": ["default", "contained"],
    "bodyTypes": ["body1", "body2"]
  },
  "layout": {
    "type": "flex",
    "direction": "column",
    "alignment": "flex-start",
    "justify": "flex-start",
    "gap": "0px"
  },
  "constraints": {
    "horizontal": "fill",
    "vertical": "hug",
    "widthMode": "fill",
    "heightMode": "hug"
  },
  "tabs": {
    "container": {
      "display": "flex",
      "direction": "row",
      "gap": "0px",
      "borderBottom": "1px solid var(--border)"
    },
    "body1": {
      "minHeight": "48px",
      "padding": "16px 20px",
      "fontSize": "16px",
      "lineHeight": "1.5"
    },
    "body2": {
      "minHeight": "36px",
      "padding": "10px 16px",
      "fontSize": "14px",
      "lineHeight": "1.5"
    }
  },
  "visual": {
    "backgroundColor": "var(--surface)",
    "borderRadius": "0px",
    "border": "none"
  },
  "tabStates": {
    "default": {
      "color": "var(--text-subtle)",
      "background": "transparent",
      "border": "none"
    },
    "hover": {
      "color": "var(--text)",
      "background": "var(--surface-hover)"
    },
    "active": {
      "color": "var(--purple-text)",
      "background": "transparent",
      "borderBottom": "2px solid var(--text)"
    },
    "disabled": {
      "color": "var(--text-disabled)",
      "background": "transparent",
      "opacity": 0.6
    }
  },
  "tabPanel": {
    "padding": "24px",
    "backgroundColor": "var(--surface)",
    "minHeight": "auto"
  },
  "text": {
    "fontFamily": "'IBM Plex Sans', sans-serif",
    "fontWeight": {
      "default": 400,
      "active": 500
    },
    "whiteSpace": "nowrap",
    "truncation": false
  }
}

