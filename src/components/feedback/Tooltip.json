{
  "component": "Tooltip",
  "description": "A tooltip component that displays contextual information on hover or focus. Supports multiple positioning options.",
  "variants": {
    "positions": ["top", "bottom", "left", "right", "top-start", "top-end", "bottom-start", "bottom-end", "left-start", "left-end", "right-start", "right-end"],
    "triggers": ["hover", "click", "focus", "manual"]
  },
  "layout": {
    "type": "inline-block",
    "padding": "6px 8px",
    "gap": "4px"
  },
  "constraints": {
    "horizontal": "hug",
    "vertical": "hug",
    "widthMode": "fit-content",
    "heightMode": "hug",
    "maxWidth": "180px",
    "minWidth": "auto"
  },
  "visual": {
    "backgroundColor": "var(--grey-grey-900)",
    "borderRadius": "4px",
    "border": "none",
    "color": "var(--grey-white)",
    "shadow": "0 2px 8px rgba(0, 0, 0, 0.15)"
  },
  "text": {
    "fontFamily": "'IBM Plex Sans', sans-serif",
    "fontSize": "12px",
    "fontWeight": 400,
    "lineHeight": "1.5",
    "whiteSpace": "normal",
    "truncation": false,
    "textAlign": "left",
    "maxLines": null
  },
  "positioning": {
    "type": "absolute",
    "zIndex": 1000,
    "offset": "8px",
    "flip": true,
    "shift": true
  },
  "animation": {
    "fadeIn": "0.15s ease-out",
    "fadeOut": "0.1s ease-in"
  },
  "accessibility": {
    "role": "tooltip",
    "ariaLive": "polite",
    "idPrefix": "tooltip-"
  }
}

