{
  "component": "Alert",
  "description": "A persistent banner notification component for displaying success, info, danger, and warning messages. Supports optional title, icon, and dismiss functionality.",
  "variants": {
    "types": ["success", "info", "danger", "warning"],
    "default": "info"
  },
  "layout": {
    "type": "flex",
    "direction": "row",
    "alignment": "flex-start",
    "justify": "flex-start",
    "gap": "12px",
    "padding": "12px 16px"
  },
  "constraints": {
    "horizontal": "fill",
    "vertical": "hug",
    "widthMode": "fill",
    "heightMode": "hug"
  },
  "overflow": {
    "overflow": "visible"
  },
  "visual": {
    "default": {
      "backgroundColor": "var(--info-surface)",
      "borderRadius": "4px",
      "border": "1px solid var(--info-border)"
    },
    "success": {
      "backgroundColor": "var(--success-surface)",
      "borderColor": "var(--success-border)",
      "textColor": "var(--success-text)"
    },
    "info": {
      "backgroundColor": "var(--info-surface)",
      "borderColor": "var(--info-border)",
      "textColor": "var(--info-text)"
    },
    "danger": {
      "backgroundColor": "var(--danger-surface)",
      "borderColor": "var(--danger-border)",
      "textColor": "var(--danger-text)"
    },
    "warning": {
      "backgroundColor": "var(--warning-surface)",
      "borderColor": "var(--warning-border)",
      "textColor": "var(--warning-text)"
    }
  },
  "children": {
    "icon": {
      "type": "optional",
      "display": "flex",
      "flexShrink": 0,
      "width": "20px",
      "height": "20px",
      "alignItems": "center",
      "justifyContent": "center"
    },
    "content": {
      "type": "required",
      "display": "flex",
      "flexDirection": "column",
      "flex": "1 1 0",
      "minWidth": 0,
      "gap": "4px"
    },
    "closeButton": {
      "type": "optional",
      "display": "flex",
      "flexShrink": 0,
      "width": "20px",
      "height": "20px",
      "alignItems": "center",
      "justifyContent": "center"
    }
  },
  "text": {
    "fontFamily": "'IBM Plex Sans', sans-serif",
    "title": {
      "fontSize": "14px",
      "fontWeight": 500,
      "lineHeight": "1.5",
      "color": "var(--info-text)",
      "whiteSpace": "nowrap",
      "truncation": true,
      "overflowWrap": "normal"
    },
    "message": {
      "fontSize": "14px",
      "fontWeight": 400,
      "lineHeight": "1.5",
      "color": "var(--info-text)",
      "whiteSpace": "normal",
      "truncation": false,
      "overflowWrap": "break-word"
    }
  }
}

