{
  "component": "ImageUpload",
  "description": "A file upload component for images with drag & drop support, preview functionality, and file validation. Supports single file upload.",
  "variants": [],
  "layout": {
    "type": "auto-layout",
    "direction": "vertical",
    "alignment": {
      "self": "stretch",
      "children": "stretch"
    },
    "padding": {
      "top": 0,
      "right": 0,
      "bottom": 0,
      "left": 0
    },
    "gap": 8
  },
  "constraints": {
    "horizontal": "left",
    "vertical": "top",
    "width": {
      "mode": "fill-container",
      "min": null,
      "max": null,
      "value": null
    },
    "height": {
      "mode": "hug-contents",
      "min": null,
      "max": null,
      "value": null
    }
  },
  "overflow": {
    "horizontal": "visible",
    "vertical": "visible",
    "clipping": false
  },
  "text": {
    "truncation": "none",
    "whiteSpace": "normal",
    "maxLines": null,
    "overflowWrap": "normal"
  },
  "children": [
    {
      "name": "upload-area",
      "type": "container",
      "constraints": {
        "horizontal": "stretch",
        "vertical": "top"
      },
      "width": {
        "mode": "fill-container",
        "min": null,
        "max": null
      },
      "height": {
        "mode": "fixed",
        "value": 200
      },
      "flex": {
        "grow": 0,
        "shrink": 1,
        "minWidth": 0
      }
    },
    {
      "name": "preview",
      "type": "image",
      "constraints": {
        "horizontal": "center",
        "vertical": "top"
      },
      "width": {
        "mode": "fixed",
        "value": 200
      },
      "height": {
        "mode": "fixed",
        "value": 200
      },
      "flex": {
        "grow": 0,
        "shrink": 0,
        "minWidth": 0
      }
    }
  ],
  "props": {
    "accept": {
      "type": "string",
      "description": "File types to accept (e.g., 'image/*', '.jpg,.png'). Default: 'image/*'"
    },
    "maxSize": {
      "type": "number",
      "description": "Maximum file size in bytes. Default: 5MB (5242880)"
    },
    "previewSize": {
      "type": "number",
      "description": "Preview image size in pixels. Default: 200"
    }
  }
}

