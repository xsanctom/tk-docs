{
  "component": "AvatarUpload",
  "description": "A specialized image upload component for user avatars with circular preview, single file support, and default fallback icon. Click to upload, edit icon overlay on hover.",
  "variants": ["sm", "md", "lg", "xl"],
  "layout": {
    "type": "auto-layout",
    "direction": "vertical",
    "alignment": {
      "self": "stretch",
      "children": "stretch"
    },
    "padding": {
      "top": 0,
      "right": 0,
      "bottom": 0,
      "left": 0
    },
    "gap": 0
  },
  "constraints": {
    "horizontal": "left",
    "vertical": "top",
    "width": {
      "mode": "hug-contents",
      "min": null,
      "max": null,
      "value": null
    },
    "height": {
      "mode": "hug-contents",
      "min": null,
      "max": null,
      "value": null
    }
  },
  "overflow": {
    "horizontal": "visible",
    "vertical": "visible",
    "clipping": false
  },
  "text": {
    "truncation": "none",
    "whiteSpace": "normal",
    "maxLines": null,
    "overflowWrap": "normal"
  },
  "sizes": {
    "sm": {
      "width": 48,
      "height": 48
    },
    "md": {
      "width": 64,
      "height": 64
    },
    "lg": {
      "width": 96,
      "height": 96
    },
    "xl": {
      "width": 128,
      "height": 128
    }
  },
  "children": [
    {
      "name": "avatar-container",
      "type": "container",
      "constraints": {
        "horizontal": "center",
        "vertical": "top"
      },
      "width": {
        "mode": "fixed",
        "value": 64
      },
      "height": {
        "mode": "fixed",
        "value": 64
      },
      "flex": {
        "grow": 0,
        "shrink": 0,
        "minWidth": 0
      }
    }
  ],
  "props": {
    "accept": {
      "type": "string",
      "description": "File types to accept (e.g., 'image/*', '.jpg,.png'). Default: 'image/*'"
    },
    "maxSize": {
      "type": "number",
      "description": "Maximum file size in bytes. Default: 5MB (5242880)"
    },
    "showEditOverlay": {
      "type": "boolean",
      "description": "Whether to show edit icon overlay on hover. Default: true"
    }
  }
}

