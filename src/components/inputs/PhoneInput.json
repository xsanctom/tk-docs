{
  "component": "PhoneInput",
  "description": "A phone number input component that extends TextInput with automatic phone number formatting (US format: (555) 123-4567). Formats as user types and validates format.",
  "variants": ["mini", "sm", "md", "lg"],
  "layout": {
    "type": "auto-layout",
    "direction": "vertical",
    "alignment": {
      "self": "stretch",
      "children": "stretch"
    },
    "padding": {
      "top": 0,
      "right": 0,
      "bottom": 0,
      "left": 0
    },
    "gap": 4
  },
  "constraints": {
    "horizontal": "left",
    "vertical": "top",
    "width": {
      "mode": "fill-container",
      "min": null,
      "max": null,
      "value": null
    },
    "height": {
      "mode": "hug-contents",
      "min": null,
      "max": null,
      "value": null
    }
  },
  "overflow": {
    "horizontal": "visible",
    "vertical": "visible",
    "clipping": false
  },
  "text": {
    "truncation": "none",
    "whiteSpace": "normal",
    "maxLines": null,
    "overflowWrap": "normal"
  },
  "sizes": {
    "mini": {
      "height": 32,
      "padding": "6px 12px",
      "fontSize": 14
    },
    "sm": {
      "height": 36,
      "padding": "7px 12px",
      "fontSize": 14
    },
    "md": {
      "height": 40,
      "padding": "8px 12px",
      "fontSize": 14
    },
    "lg": {
      "height": 48,
      "padding": "10px 12px",
      "fontSize": 14
    }
  },
  "children": [
    {
      "name": "phone-input",
      "type": "input",
      "constraints": {
        "horizontal": "left",
        "vertical": "top"
      },
      "width": {
        "mode": "fill-container",
        "min": null,
        "max": null
      },
      "height": {
        "mode": "fixed",
        "value": 40
      },
      "flex": {
        "grow": 1,
        "shrink": 1,
        "minWidth": 0
      }
    }
  ],
  "props": {
    "format": {
      "type": "string",
      "description": "Phone format: 'us' (default) or 'international'. Default: 'us'"
    },
    "validate": {
      "type": "boolean",
      "description": "Whether to validate phone number format. Default: true"
    }
  }
}

