{
  "component": "InputGroup",
  "description": "Wrapper component for form inputs that provides label, helper text, and error message structure",
  "variants": {
    "default": {
      "layout": {
        "type": "auto-layout",
        "direction": "vertical",
        "alignment": "stretch",
        "padding": {
          "top": 0,
          "right": 0,
          "bottom": 0,
          "left": 0
        },
        "gap": 8
      },
      "constraints": {
        "horizontal": "fill",
        "vertical": "hug",
        "width": "fill",
        "height": "hug"
      },
      "overflow": "visible",
      "text": {
        "truncation": false,
        "whiteSpace": "normal",
        "maxLines": null,
        "overflowWrap": "break-word"
      },
      "children": [
        {
          "name": "label-group",
          "type": "container",
          "optional": true,
          "layout": {
            "type": "auto-layout",
            "direction": "horizontal",
            "alignment": "space-between",
            "gap": 8
          },
          "constraints": {
            "horizontal": "fill",
            "vertical": "hug",
            "width": "fill",
            "height": "hug"
          },
          "children": [
            {
              "name": "label",
              "type": "text",
              "layout": {
                "type": "text"
              },
              "constraints": {
                "horizontal": "hug",
                "vertical": "hug"
              },
              "text": {
                "truncation": false,
                "whiteSpace": "normal"
              }
            },
            {
              "name": "optional-indicator",
              "type": "text",
              "optional": true,
              "constraints": {
                "horizontal": "hug",
                "vertical": "hug"
              },
              "text": {
                "truncation": false,
                "whiteSpace": "normal"
              }
            }
          ]
        },
        {
          "name": "sublabel",
          "type": "text",
          "optional": true,
          "constraints": {
            "horizontal": "fill",
            "vertical": "hug"
          },
          "text": {
            "truncation": false,
            "whiteSpace": "normal",
            "overflowWrap": "break-word"
          }
        },
        {
          "name": "input-wrapper",
          "type": "container",
          "layout": {
            "type": "auto-layout",
            "direction": "vertical",
            "gap": 4
          },
          "constraints": {
            "horizontal": "fill",
            "vertical": "hug",
            "width": "fill"
          },
          "children": [
            {
              "name": "input",
              "type": "slot",
              "constraints": {
                "horizontal": "fill",
                "vertical": "hug",
                "width": "fill"
              }
            },
            {
              "name": "error-message",
              "type": "text",
              "optional": true,
              "constraints": {
                "horizontal": "fill",
                "vertical": "hug"
              },
              "text": {
                "truncation": false,
                "whiteSpace": "normal",
                "overflowWrap": "break-word"
              }
            }
          ]
        },
        {
          "name": "helper-text",
          "type": "text",
          "optional": true,
          "constraints": {
            "horizontal": "fill",
            "vertical": "hug"
          },
          "text": {
            "truncation": false,
            "whiteSpace": "normal",
            "overflowWrap": "break-word"
          }
        }
      ]
    }
  }
}


