{
  "component": "CurrencyInput",
  "description": "A currency input component that wraps NumberInput with currency-specific defaults. Automatically handles currency symbol display, decimal places, and formatting.",
  "variants": ["mini", "sm", "md", "lg"],
  "layout": {
    "type": "auto-layout",
    "direction": "vertical",
    "alignment": {
      "self": "stretch",
      "children": "stretch"
    },
    "padding": {
      "top": 0,
      "right": 0,
      "bottom": 0,
      "left": 0
    },
    "gap": 4
  },
  "constraints": {
    "horizontal": "left",
    "vertical": "top",
    "width": {
      "mode": "fill-container",
      "min": null,
      "max": null,
      "value": null
    },
    "height": {
      "mode": "hug-contents",
      "min": null,
      "max": null,
      "value": null
    }
  },
  "overflow": {
    "horizontal": "visible",
    "vertical": "visible",
    "clipping": false
  },
  "text": {
    "truncation": "none",
    "whiteSpace": "normal",
    "maxLines": null,
    "overflowWrap": "normal"
  },
  "sizes": {
    "mini": {
      "height": 32,
      "padding": "6px 12px",
      "fontSize": 14
    },
    "sm": {
      "height": 36,
      "padding": "7px 12px",
      "fontSize": 14
    },
    "md": {
      "height": 40,
      "padding": "8px 12px",
      "fontSize": 14
    },
    "lg": {
      "height": 48,
      "padding": "10px 12px",
      "fontSize": 14
    }
  },
  "children": [
    {
      "name": "currency-input",
      "type": "input",
      "constraints": {
        "horizontal": "left",
        "vertical": "top"
      },
      "width": {
        "mode": "fill-container",
        "min": null,
        "max": null
      },
      "height": {
        "mode": "fixed",
        "value": 40
      },
      "flex": {
        "grow": 1,
        "shrink": 1,
        "minWidth": 0
      }
    }
  ],
  "props": {
    "currency": {
      "type": "string",
      "description": "Currency code (e.g., 'USD', 'JPY', 'EUR', 'GBP'). Default: 'USD'"
    },
    "showSymbol": {
      "type": "boolean",
      "description": "Whether to show currency symbol as prefix. Default: true"
    },
    "decimalPlaces": {
      "type": "number",
      "description": "Number of decimal places. Defaults to currency-specific (USD=2, JPY=0). Override if needed."
    },
    "formatOnBlur": {
      "type": "boolean",
      "description": "Format number on blur with thousand separators. Default: true"
    },
    "min": {
      "type": "number",
      "description": "Minimum value allowed"
    },
    "max": {
      "type": "number",
      "description": "Maximum value allowed"
    },
    "allowNegative": {
      "type": "boolean",
      "description": "Whether negative numbers are allowed. Default: false (currencies are typically positive)"
    }
  },
  "currencyDefaults": {
    "USD": {
      "symbol": "USD",
      "decimalPlaces": 2
    },
    "JPY": {
      "symbol": "JPY",
      "decimalPlaces": 0
    },
    "EUR": {
      "symbol": "EUR",
      "decimalPlaces": 2
    },
    "GBP": {
      "symbol": "GBP",
      "decimalPlaces": 2
    }
  }
}

