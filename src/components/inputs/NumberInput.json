{
  "component": "NumberInput",
  "description": "A number input component with size variants, min/max/step support, and optional prefix/suffix. Extends TextInput functionality with number-specific features.",
  "variants": ["mini", "sm", "md", "lg"],
  "layout": {
    "type": "auto-layout",
    "direction": "vertical",
    "alignment": {
      "self": "stretch",
      "children": "stretch"
    },
    "padding": {
      "top": 0,
      "right": 0,
      "bottom": 0,
      "left": 0
    },
    "gap": 4
  },
  "constraints": {
    "horizontal": "left",
    "vertical": "top",
    "width": {
      "mode": "fill-container",
      "min": null,
      "max": null,
      "value": null
    },
    "height": {
      "mode": "hug-contents",
      "min": null,
      "max": null,
      "value": null
    }
  },
  "overflow": {
    "horizontal": "visible",
    "vertical": "visible",
    "clipping": false
  },
  "text": {
    "truncation": "none",
    "whiteSpace": "normal",
    "maxLines": null,
    "overflowWrap": "normal"
  },
  "sizes": {
    "mini": {
      "height": 32,
      "padding": "6px 12px",
      "fontSize": 14
    },
    "sm": {
      "height": 36,
      "padding": "7px 12px",
      "fontSize": 14
    },
    "md": {
      "height": 40,
      "padding": "8px 12px",
      "fontSize": 14
    },
    "lg": {
      "height": 48,
      "padding": "10px 12px",
      "fontSize": 14
    }
  },
  "children": [
    {
      "name": "number-input",
      "type": "input",
      "constraints": {
        "horizontal": "left",
        "vertical": "top"
      },
      "width": {
        "mode": "fill-container",
        "min": null,
        "max": null
      },
      "height": {
        "mode": "fixed",
        "value": 40
      },
      "flex": {
        "grow": 1,
        "shrink": 1,
        "minWidth": 0
      }
    }
  ],
  "props": {
    "min": {
      "type": "number",
      "description": "Minimum value allowed"
    },
    "max": {
      "type": "number",
      "description": "Maximum value allowed"
    },
    "step": {
      "type": "number",
      "description": "Step increment/decrement value. Default: 1"
    },
    "decimalPlaces": {
      "type": "number",
      "description": "Number of decimal places (0-20). Affects step if not explicitly set."
    },
    "allowNegative": {
      "type": "boolean",
      "description": "Whether negative numbers are allowed. Default: true"
    },
    "formatOnBlur": {
      "type": "boolean",
      "description": "Format number on blur (e.g., add thousand separators). Default: false"
    }
  }
}

