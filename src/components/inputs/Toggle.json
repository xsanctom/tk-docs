{
  "component": "Toggle",
  "variants": ["sm", "md", "lg"],
  "layout": {
    "type": "auto-layout",
    "direction": "horizontal",
    "alignment": {
      "self": "stretch",
      "children": "center"
    },
    "padding": {
      "top": 0,
      "right": 0,
      "bottom": 0,
      "left": 0
    },
    "gap": 12
  },
  "constraints": {
    "horizontal": "left",
    "vertical": "top",
    "width": {
      "mode": "hug-contents",
      "min": null,
      "max": null,
      "value": null
    },
    "height": {
      "mode": "hug-contents",
      "min": null,
      "max": null,
      "value": null
    }
  },
  "overflow": {
    "horizontal": "visible",
    "vertical": "visible",
    "clipping": false
  },
  "text": {
    "truncation": "none",
    "whiteSpace": "normal",
    "maxLines": null,
    "overflowWrap": "normal"
  },
  "sizes": {
    "sm": {
      "width": 38,
      "height": 20,
      "sliderSize": 14,
      "translation": 18,
      "padding": 3
    },
    "md": {
      "width": 50,
      "height": 26,
      "sliderSize": 20,
      "translation": 24,
      "padding": 3
    },
    "lg": {
      "width": 68,
      "height": 38,
      "sliderSize": 28,
      "translation": 30,
      "padding": 5
    }
  },
  "children": [
    {
      "name": "toggle-switch",
      "type": "component",
      "constraints": {
        "horizontal": "left",
        "vertical": "center"
      },
      "width": {
        "mode": "fixed",
        "value": 44
      },
      "height": {
        "mode": "fixed",
        "value": 24
      },
      "flex": {
        "grow": 0,
        "shrink": 0
      }
    },
    {
      "name": "toggle-info",
      "type": "container",
      "layout": {
        "direction": "vertical",
        "gap": 4
      },
      "constraints": {
        "horizontal": "left",
        "vertical": "top"
      },
      "width": {
        "mode": "fill-container",
        "min": null,
        "max": null
      },
      "height": {
        "mode": "hug-contents"
      },
      "flex": {
        "grow": 1,
        "shrink": 1,
        "minWidth": 0
      },
      "children": [
        {
          "name": "toggle-label",
          "type": "text",
          "fontSize": 14,
          "fontWeight": 500,
          "optional": true
        },
        {
          "name": "toggle-description",
          "type": "text",
          "fontSize": 12,
          "fontWeight": 400,
          "color": "subtle",
          "optional": true
        }
      ]
    }
  ]
}
